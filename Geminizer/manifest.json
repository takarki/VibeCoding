        "run_prompt_19": {
            "description": "プロンプト19を実行"
        }
    },
    "icons": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "prompts/*.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}